{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Streamware Voice Shell",
  "version": "1.0.0",
  "identifier": "com.streamware.voice-shell",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../ui",
    "devUrl": "http://localhost:8766"
  },
  "app": {
    "windows": [
      {
        "title": "Streamware Voice Shell",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* ws://localhost:*; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2024 Streamware",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3", "python3"]
      }
    },
    "longDescription": "Voice-enabled shell interface for Streamware",
    "shortDescription": "AI Voice Shell",
    "targets": "all"
  },
  "plugins": {}
}
