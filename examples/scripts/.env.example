# =============================================================================
# Streamware Scripts Configuration
# Copy to .env and customize for your setup
# =============================================================================

# -----------------------------------------------------------------------------
# Camera Settings
# -----------------------------------------------------------------------------
# Primary camera RTSP URL
CAMERA_URL="rtsp://admin:admin@192.168.1.100:554/stream"

# Secondary camera (optional)
CAMERA_URL_2="rtsp://admin:admin@192.168.1.101:554/stream"

# Camera credentials (used for auto-discovery)
CAMERA_USER="admin"
CAMERA_PASS="admin"

# -----------------------------------------------------------------------------
# Analysis Settings
# -----------------------------------------------------------------------------
# Default analysis duration (seconds)
DURATION=60

# Interval between frame captures (seconds)  
INTERVAL=10

# Focus target: person, vehicle, animal, face, motion, package, intrusion
FOCUS="person"

# Sensitivity: ultra, high, medium, low, minimal
# Instead of numeric threshold, use descriptive sensitivity:
#   ultra   - detect tiny changes (noisy, many detections)
#   high    - sensitive detection (good for security)
#   medium  - balanced (default)
#   low     - only significant changes (fewer false alarms)
#   minimal - only major changes (very stable scenes)
SENSITIVITY="medium"

# AI model for analysis (llava:7b is faster, llava:13b is better)
MODEL="llava:7b"

# -----------------------------------------------------------------------------
# Streamware Core Settings (SQ_ prefix)
# -----------------------------------------------------------------------------
# Ollama API URL
SQ_OLLAMA_URL="http://localhost:11434"

# LLM timeout in seconds
SQ_LLM_TIMEOUT=30

# Default model
SQ_MODEL="llava:7b"

# Detection mode: full, diff, track
SQ_STREAM_MODE="diff"

# Detection sensitivity (descriptive)
SQ_SENSITIVITY="medium"

# Motion threshold (0-100, lower = more sensitive)
# Or use SQ_SENSITIVITY instead
SQ_MOTION_THRESHOLD=15

# Minimum change percent to trigger
SQ_MIN_CHANGE=0.5

# -----------------------------------------------------------------------------
# Alerts - Slack
# -----------------------------------------------------------------------------
# Slack webhook URL for alerts
SLACK_WEBHOOK=""

# Slack channel (optional, uses webhook default)
SLACK_CHANNEL="alerts"

# -----------------------------------------------------------------------------
# Alerts - Telegram
# -----------------------------------------------------------------------------
# Telegram bot token (from @BotFather)
TELEGRAM_TOKEN=""

# Telegram chat ID (your user or group ID)
TELEGRAM_CHAT=""

# -----------------------------------------------------------------------------
# Alerts - Email
# -----------------------------------------------------------------------------
# SMTP server settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# Email addresses
EMAIL_FROM=""
EMAIL_TO=""

# -----------------------------------------------------------------------------
# Output Settings
# -----------------------------------------------------------------------------
# Directory for reports
REPORTS_DIR="./reports"

# Directory for logs
LOGS_DIR="./logs"

# Directory for captured frames
FRAMES_DIR="./frames"

# -----------------------------------------------------------------------------
# Monitoring Settings
# -----------------------------------------------------------------------------
# Interval between monitoring checks (seconds)
MONITOR_INTERVAL=60

# Enable continuous monitoring (true/false)
CONTINUOUS_MODE="false"

# Maximum alerts per hour (0 = unlimited)
MAX_ALERTS_PER_HOUR=10

# -----------------------------------------------------------------------------
# Network Settings
# -----------------------------------------------------------------------------
# Subnet to scan (empty = auto-detect)
NETWORK_SUBNET=""

# Scan timeout (seconds)
NETWORK_TIMEOUT=10
